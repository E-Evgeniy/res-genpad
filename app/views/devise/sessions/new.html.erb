
<h2 class = 'new_log'><%= t('.log_in')%></h2>
<div class = 'log_in'>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= f.label t('.email'), class: 'field' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'field' %>

  <div class="field1">
    <%= f.label t('.password'), class: 'field' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'field' %>
   </div>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label t('.remember_me') %>
    </div>
  <% end %>

  <%= button_to t('.new_session'), new_user_session_path, method: :post, class:"log_in_button", params: { lang: I18n.locale } %>
<% end %>
</div>
<div class = 'links_new'>
<%= render "devise/shared/links" %>
</div>

